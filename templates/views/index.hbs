<body>
    <div class = "main-content">
        {{>header}}

        <div class="top-logo"><img src="weather.png"> </div>
        <div class="form">
            <form>
                <i class="fas fa-search"></i>
                <input placeholder="Enter Location">
                <button>Search</button>
            </form>
        </div>

        <div class="result">
            <p id="temp"></p>
            <p id= "message-1"></p>
            <p id = "message-2"></p>
        </div>
    </div>
  
    {{>footer}}

    
